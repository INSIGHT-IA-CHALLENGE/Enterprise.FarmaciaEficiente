@model Medicamento


<style>
    .nav-pills .nav-link.active {
        background-color: #6e5aa3;
        color: #fff;
    }

    .nav-pills .nav-link:not(.active) {
        background-color: #f0f0f0;
        color: #000;
    }
</style>

<div class="card-body">
    <div class="mb-4 row">



        <h3>Cadastro medicamentos</h3>

        <div class="col-12">
            <div class="form-outline mb-4">
                <label asp-for="Nome">Nome</label>
                <input required asp-for="Nome" class="form-control" placeholder="Dipirona" />
            </div>
        </div>


        <div class="col-12">
            <div class="form-outline mb-4">
                <label asp-for="Descricao">Descrição</label>
                <input max="50" min="1" required asp-for="Descricao" class="form-control" placeholder="Descrição do medicamento" />
            </div>
        </div>

        <div class="col-12">

            <div class="form-outline mb-4">
                <label asp-for="Preco">Preco</label>
                <input required asp-for="Preco" class="form-control" placeholder="12.00" />
            </div>
        </div>
        

    







    </div>
</div>

